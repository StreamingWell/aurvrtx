<div class="title-header-3">
</div>

<div class="container">
	<div class="blockquote-box clearfix col-md-12" align="left">
		
		<div class="col-md-6" style="margin: 50px 0 50px 0;">
			<h1>Forgotten your password?</h1>
				<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
		    <%= f.input :email, :autofocus => true, label: "Email Address" %>
				<br />
		    <fieldset>
		   		<%= f.button :submit, "Reset Password", class: "btn btn-danger" %>
				</fieldset>
			<% end %>
			<br />
		</div>
	</div>
</div>
<%= render 'layouts/footer' %>
