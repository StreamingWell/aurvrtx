<div class="jumbotron">
	<%= render 'layouts/title' %>
</div>

<div class="container">
  <div class="blockquote-box clearfix col-md-8 col-md-offset-2" align="left" style="padding-bottom: 10px; margin-top:-25px;">
	  <h3 style="color: #3787ad; margin-top: 5px;">Interactive Questions</h3>
	  <h5><span style="color: rgb(167, 43, 77)">Weâ€™d be very grateful if you could please just spend one minute providing feedback regarding the webinar you have recently watched.</span></h5>

			<!-- flash_notice to show if form submission is successful -->
		<div class="alert alert-success" id="form-success" style="display: none;">
			<strong>Thank you for your feedback.</strong>
		</div>

		<!-- flash_notice to show if form submission is unsuccessful -->
		<div class="alert alert-error" id="form-error" style="display: none;">
			<strong>Please fill in all fields.</strong>
		</div>

		<br />

	<div class="">
			<%= simple_form_for @firstinteractive, :url => firstinteractive_path, method: :post, html: { class: "form-horizontal"} do |form| %>

			<h4>Q1: How relevant did you find the information presented to your day to day clinical work?</h4>

				<%= form.input :question1, as: :radio_buttons, collection: ['Very relevant', 'Partly relevant', 'Not at all relevant'], label: false %>
				<br>

			<h4>Q2: How did you find the amount of information presented?</h4>
				<%= form.input :question2, as: :radio_buttons, collection: ['Too much', 'About right', 'Too little'], label: false %>
				<br>

			<h4>Q3: How likely is it that you will change your clinical practice as a result of what you have learned from this webinar?</h4>

				<%= form.input :question3, as: :radio_buttons, collection: ['Very likely', 'Quite likely', 'Unlikely'], label: false %>

	  		<br />
			  </div>

				  <fieldset class="actions">
				    <%= form.submit "Submit", class: 'btn btn-primary btn-large' %>
				  </fieldset>
			<% end %>
		</div>
	</div>
</div>
