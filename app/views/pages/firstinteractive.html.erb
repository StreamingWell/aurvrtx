<% if user_signed_in? %>

<div class="title-header-3">
</div>

<div class="container">
  <div class="blockquote-box clearfix col-md-8 col-md-offset-2" align="left" style="margin-top:-75px;">
		<h3 style="color: #3787ad; margin-top: 5px;">Interactive questions</h3>
		<hr>

			<!-- flash_notice to show if form submission is successful -->
		<div class="alert alert-success" id="form-success" style="display: none;">
			<strong>Thank you for your answers.</strong>
		</div>

		<!-- flash_notice to show if form submission is unsuccessful -->
		<div class="alert alert-error" id="form-error" style="display: none;">
			<strong>Please answer all questions.</strong>
		</div>

		<br />

	<div class="">
			<%= simple_form_for @firstinteractive, :url => firstinteractive_path, method: :post, html: { class: "form-horizontal"} do |form| %>

			<h4 style="color: #3787ad;">Q1: How many drug-device-dose combinations are currently available in the UK?</h4>

			<div class="container">
			
			<%= form.input :question1, as: :radio_buttons, collection: ['36', '68', 'Over 90'], label: false %>
			
			</div>

			<br />

			<h4 style="color: #3787ad;">Q2: What percentage of patients cannot use a metered-dose inhaler (MDI) correctly?</h4>

			<div class="container">

			<%= form.input :question2, as: :radio_buttons, collection: ['Over 90%', '65%', '48%'], label: false %>
	
			</div>
			
			<br />

			<h4 style="color: #3787ad;">Q3: From global studies, what percentage of patients with asthma or chronic obstructive pulmonary disease (COPD) have never received verbal inhaler technique instruction?</h4>

			<div class="container">

			<%= form.input :question3, as: :radio_buttons, collection: ['15%', '25%', '40%'], label: false %>

			</div>

	  	<br />
	</div>

		<hr>
		<br />

				  <fieldset class="actions">
				    <%= form.submit "Submit", class: 'btn btn-primary btn-large' %>
				  </fieldset>
			<% end %>

			<br />

      <%= render 'layouts/augustamfooter' %>      

		</div>
	</div>
</div>

<% else %>
  <%= render 'layouts/preregistration' %>
<% end %>
