<div class="jumbotron">
	
	<%= render 'layouts/title' %>
</div>
<div class="container">		    
	<div class="col-md-12">
			
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
    	<%= f.input :email, :autofocus => true, label: "Email Address" %>
    	<%= f.input :password %>
		<br />
	    <fieldset>
	   		<%= f.button :submit, "Login", class: 'btn btn-primary btn-large' %>
		</fieldset>
		<% end %>
	</div>
</div>

<br />
<br />
<div class="col-md-12" style="margin-top: 250px;">

	<%= render 'layouts/prefooter' %>

</div>
